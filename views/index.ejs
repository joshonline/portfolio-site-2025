<!-- About -->
<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-l-8 mx-auto">
        <div class="mb-4">
          <h2 class="mb-4">About Me</h2>
          <p class="lead">
            I'm Joshua Masanza, a Networking & IT enthusiast with a sharp eye
            for building secure, reliable systems.
          </p>
          <p>
            Whether it's designing infrastructure, troubleshooting complex
            networks, or exploring how software can enhance IT solutions, I
            thrive on connecting the dots that keep technology running smoothly.
            Always learning, always building. I'm passionate about turning ideas
            into practical, working systems.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured projects -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-5">Featured Projects</h2>
    <div class="row g-4">
      <% projects.forEach(project => { %>
      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h3 class="card-title"><%= project.title %></h3>
            <% if (project.status === 'ongoing') { %>
            <span class="badge bg-warning text-dark mb-3">Ongoing</span>
            <% } %>
            <p class="card-text"><%= project.description %></p>
            <div class="mt-3">
              <% Object.entries(project.links).forEach(([key, url]) => { %>
              <a
                href="<%= url %>"
                target="_blank"
                class="btn btn-sm btn-outline-primary me-2 mb-2"
              >
                <i class="bi bi-github"></i> <%= key.charAt(0).toUpperCase() +
                key.slice(1) %>
              </a>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
