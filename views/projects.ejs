<div class="container py-5">
  <h1 class="mb-5 text-center">My Projects</h1>

  <!-- Generate elements for select projects -->
  <div class="row g-4">
    <% projects.forEach(project => { %>
    <div class="col-lg-6">
      <div class="card h-100 shadow-sm">
        <% if (project.id === 'accommodation-system') { %>
        <img
          src="/images/AMS-project-screenshot.png"
          class="card-img-top"
          alt="<%= project.title %>"
        />
        <% } else if (project.id === 'Automated Linux Backup') { %>
        <img
          src="/images/Fedora-backup-script.png"
          class="card-img-top"
          alt="<%= project.title %>"
        />
        <% } %>

        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h2 class="card-title h4"><%= project.title %></h2>
            <% if (project.status === 'ongoing') { %>
            <span class="badge bg-warning text-dark">Ongoing</span>
            <% } else { %>
            <span class="badge bg-success">Completed</span>
            <% } %>
          </div>

          <p class="card-text"><%= project.description %></p>

          <% if (project.tags && project.tags.length > 0) { %>
          <div class="mb-3">
            <% project.tags.forEach(tag => { %>
            <span class="badge bg-secondary me-1 mb-1"><%= tag %></span>
            <% }) %>
          </div>
          <% } %> <% if (Object.keys(project.links).length > 0) { %>
          <div class="mt-3">
            <% Object.entries(project.links).forEach(([key, url]) => { %>
            <a
              href="<%= url %>"
              target="_blank"
              class="btn btn-outline-primary btn-sm me-2 mb-2"
            >
              <i class="fab fa-github"></i> <%= key.charAt(0).toUpperCase() +
              key.slice(1) %>
            </a>
            <% }) %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
